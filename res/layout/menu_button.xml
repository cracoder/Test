<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@drawable/menu_button_bg"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        style="@style/defaultSet"
        android:orientation="horizontal" >
        
        <LinearLayout
            style="@style/defaultSet"
            android:orientation="vertical" 
            android:layout_marginLeft="20dp">

            <Button 
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/home_selector"/>

            <TextView style="@style/defaultSet"
                android:textSize="12dp"
                android:text=" 首页"/>
        </LinearLayout>

        <LinearLayout
            style="@style/defaultSet"
            android:orientation="vertical"
            android:layout_marginLeft="30dp" >

            <Button 
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/we_selector"/>

            <TextView style="@style/defaultSet"
                android:textSize="12dp"
                android:text=" 微淘"/>
        </LinearLayout>
        
        <LinearLayout
            style="@style/defaultSet"
            android:orientation="vertical"
            android:layout_marginLeft="30dp">

            <Button 
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/community_selector"/>

            <TextView style="@style/defaultSet"
                android:textSize="12dp"
                android:text=" 社区"/>
        </LinearLayout>
        
        <LinearLayout
            style="@style/defaultSet"
            android:orientation="vertical" 
            android:layout_marginLeft="30dp">

            <Button 
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/cart_selector"/>

            <TextView style="@style/defaultSet"
                android:textSize="12dp"
                android:text=" 购物车"/>
        </LinearLayout>
        
        <LinearLayout
            style="@style/defaultSet"
            android:orientation="vertical" 
            android:layout_marginLeft="30dp">

            <Button 
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/my_selector"/>

            <TextView style="@style/defaultSet"
                android:textSize="12dp"
                android:text="关于我"/>
        </LinearLayout>
    </LinearLayout>
    


</RelativeLayout>